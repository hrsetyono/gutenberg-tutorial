{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "max-len": 0,
    "linebreak-style": 0,
    "no-alert": "off",
    "no-param-reassign": [2, { "props": false }],
    "prefer-destructuring": [
      "error",
      {
        "VariableDeclarator": {
          "array": false,
          "object": true
        },
        "AssignmentExpression": {
          "array": false,
          "object": false
        }
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "react/react-in-jsx-scope": 0,
    "wrap-iife": 0,
    "jsx-a11y/label-has-associated-control": 0
  }
}